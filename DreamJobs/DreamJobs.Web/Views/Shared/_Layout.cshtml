<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamJobs.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DreamJobs.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <div class="row">
        <div class="col-12">
            <!-- Footer -->
            <div class="my-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="nav-content">
                                <h4 class="pb-2 text-white">Job Seekers</h4>
                                <ul class="list-unstyled text-white">
                                    <li><a asp-controller="" asp-action="" class="text-white">Video Guides</a></li>
                                    <li><a asp-controller="" asp-action="" class="text-white">FAQ</a></li>
                                    <li><a href="" class="text-white">My Bdjobs</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="nav-content">
                                <h4 class="pb-2 text-white">Company</h4>
                                <ul class="list-unstyled text-white">
                                    <li><a href="" class="text-white">Create Account</a></li>
                                    <li><a asp-controller="" asp-action="" class="text-white">Post a Job</a></li>
                                    <li><a href="" class="text-white">FAQ</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="nav-content">
                                <h4 class="pb-2 text-white">Get In Touch</h4>
                                <ul class="list-unstyled text-white">
                                    <li><a asp-controller="" asp-action="" class="text-white">About Us</a></li>
                                    <li><a asp-controller="" asp-action="" class="text-white">Terms & Conditions</a></li>
                                    <li><a href="" class="text-white">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="nav-content">
                                <h4 class="pb-2 text-white">Follow Us</h4>
                                <p class="text-white">You can contact with us using following links</p>
                                <span class="social-link">
                                    <ul class="list-unstyled text-white ">
                                        <li>
                                            <a href="">
                                                <i class="fab fa-facebook-f text-white border border-white rounded-circle p-2"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="">
                                                <i class="fab fa-twitter text-white border border-white rounded-circle p-2"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="">
                                                <i class="fab fa-linkedin-in text-white border border-white rounded-circle p-2"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </span>
                            </div>
                        </div>
                    </div>
                    <hr class="bg-white">
                    <div class="copyright text-center text-white">
                        Copyright &copy; 2021 Dream Jobs.com
                    </div>
                </div>
            </div>
            <!-- /footer -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
