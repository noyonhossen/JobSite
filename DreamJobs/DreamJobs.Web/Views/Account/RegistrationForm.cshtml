@model DreamJobs.Web.Models.Account.RegistrationFormModel

@{
    ViewData["Title"] = "Sign Up Form";

}

@section styles{
    
}

@section Scripts{

}

<!-- page content-->
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-sm-8 col-md-5">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row no-gutters">
                        <div class="col-md-12 p-4">
                            <h4>Welcome @Model.Email</h4>
                            <p>
                                Could you please provide us some more details about you?
                                Would be helpful to provide you the best experience.
                            </p>
                            <form role="form" asp-controller="Account" asp-action="RegistrationForm" asp-antiforgery="true" method="post" enctype="multipart/form-data">
                                <div class="align-items-center d-flex my-5">  
                                    
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Name" class="label">Your Name</label>
                                    <input type="text"
                                           class="form-control"
                                           asp-for="Name"
                                           placeholder="Name" required />
                                </div>
                                <!-- email field is not required to be shown if signed up using email address-->
                                <div class="form-group">
                                    <label asp-for="Email" class="label">Email</label>
                                    <input type="Email"
                                           class="form-control"
                                           asp-for="Email"
                                           placeholder="Email" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mobile" class="label">Mobile Number</label>
                                    <input type="tel"
                                           class="form-control"
                                           id="Mobile"
                                           name="Mobile"
                                           placeholder="Mobile Number" required />
                                    <p class="form-text">
                                        Please include country code. For Bangladesh: +8801... We
                                        need this to let you know about course
                                        updates/announcements, etc.
                                    </p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Gender" class="label d-block">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input asp-for="Gender" class="form-check-input"
                                                   type="radio"
                                                   value="Male" />
                                            Male
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input asp-for="Gender" class="form-check-input"
                                                   type="radio"
                                                   value="Female" />
                                            Female
                                        </label>
                                    </div>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               name="" id=""
                                               value="checkedValue" checked required>
                                        I agree to
                                        <a href="#">terms and conditions</a>
                                        of DevSkill
                                    </label>
                                </div>
                                <hr />
                                <button type="submit" class="btn btn-primary">
                                    Done
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content-->
