@model CompanyJobListModel

@{
    ViewData["Title"] = "ViewJobs";
}

@section Styles
{
    <link href="~/css/card-hover.css" rel="stylesheet" />
}

@if (Model.JobCardShortLists.Count == 0)
{
    <h1 class="text-center mt-5">No job posted yet.</h1>
}
else
{
    <h1 class="text-center">All Posted Jobs</h1>
    @foreach (var singleCard in Model.JobCardShortLists)
    {
        <a asp-area="Company" asp-controller="Job" asp-action="ViewJobDetails" asp-route-jobId="@singleCard.JobId">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-success">@singleCard.JobTitle</h4>
                </div>
                <partial name="_JobCardShortList" model="@singleCard" />
            </div>
        </a>
    }
}

