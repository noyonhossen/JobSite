@model AddEmployeeProfileModel

@{
    ViewData["Title"] = "Add Profile Info";
}

<div class="row p-1">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="text-success">
                    First Add Profile Information
                </h4>
            </div>
            <div class="card-body bg-card">
                <form asp-area="Member" asp-controller="EmployeeProfile" asp-action="AddEmployeeProfile" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="FullName" class="label">Full Name</label>
                                <input type="text" asp-for="FullName" class="form-control" id="FullName" placeholder="Enter your FullName" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="FullName"></span>
                                </p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="FatherName" class="label">Father's Name</label>
                                <input type="text" asp-for="FatherName" class="form-control" id="FatherName" placeholder="Enter your Father's Name" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="FatherName"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="MotherName" class="label">Mother's Name</label>
                                <input type="text" asp-for="MotherName" class="form-control" id="MotherName" placeholder="Enter your Mother's Name" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="MotherName"></span>
                                </p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="label">Date Of Birth</label>
                                <input type="date" asp-for="DateOfBirth" class="form-control" id="DateOfBirth" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="DateOfBirth"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group pt-2">
                                <label asp-for="Gender">Gender</label>
                                <select class="form-control" asp-for="Gender" required>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="MobileNo" class="label">Mobile No</label>
                                <input type="text" asp-for="MobileNo" class="form-control" id="MobileNo" placeholder="Enter your Mobile No" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="MobileNo"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PresentAddress" class="label">Present Address</label>
                                <input type="text" asp-for="PresentAddress" class="form-control" id="PresentAddress" placeholder="Enter your Present Address" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="PresentAddress"></span>
                                </p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PermanentAddress" class="label">Permanent Address</label>
                                <input type="text" asp-for="PermanentAddress" class="form-control" id="PermanentAddress" placeholder="Enter your Permanent Address" required>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="PermanentAddress"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group pt-2">
                                <label asp-for="Skills">Skills</label>
                                <select class="form-control" asp-for="Skills" required multiple>
                                    @foreach (var skill in Model.SkillList)
                                    {
                                        <option value="@skill.Id">@skill.Name</option>
                                    }
                                </select>
                                <p class="form-text">
                                    Hold down the Ctrl to select multiple options.
                                </p>
                                <p class="text-danger my-2">
                                    <span asp-validation-for="Skills"></span>
                                </p>
                            </div>
                        </div>
                        <div class="col-6">

                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}